<div class='mt-4'>
	<h3>Đăng khóa học</h3>

	<form method='POST' action='/courses/store'>
		<div class='mb-3'>
			<label for='name' class='form-label'>name</label>
			<input type='text' name='name' class='form-control' id='name' />
		</div>

		<div class='mb-3'>
			<label for='description' class='form-label'>description</label>
			<input
				type='text'
				name='description'
				class='form-control'
				id='description'
			/>
		</div>

		<div class='mb-3'>
			<label for='videoId' class='form-label'>videoId</label>
			<input type='text' name='videoId' class='form-control' id='videoId' />
		</div>

		<div class='mb-3'>
			<label for='level' class='form-label'>level</label>
			<input type='text' name='level' class='form-control' id='level' />
		</div>

		<button type='submit' class='btn btn-primary'>Thêm khóa học</button>
	</form>
</div>